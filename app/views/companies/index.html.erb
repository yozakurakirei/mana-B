<h1>クライアント</h1>

<h2>CSVからインポートする</h2>
<%= form_tag import_companies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

<h2>新規登録する</h2>
<button><%= link_to "新規登録", new_company_path %></button>

<h2>クライアント一覧</h2>
<table id="admin_table" class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>会社名</th>
      <th>フリガナ</th>
      <th>商品</th>
      <th>ブランド</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.name_kana %></td>
        <td><%= c.product %></td>
        <td><%= c.brand %></td>
        <td><%= link_to "詳細", company_path(c) %></td>
        <td><%= link_to "削除", company_path(c), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
