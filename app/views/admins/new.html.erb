<div class="admin_new">

  <% @admin.errors.full_messages.each do |m| %>
    <%= m %>
  <% end %>

  <div class="bg-white shadow-md p-4 rounded">
    <%= form_with(model: @admin) do |f| %>
    <div class="admin_area">

    <!-- 会社 -->
    <div class="admin_input bg-gray-100">
      <h2>会社名を選択してください</h2>
      <div class="flex items-center mb-6">
        <%= f.label :company_id, "会社名", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
        <%= f.collection_select(:company_id, Company.all, :id, :name, {class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"}) %>
      </div>

      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "日程", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
        </div>
        <div class="flex items-center">
          <div class="w-full">
              <%= f.date_field :start, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
          <div class="px-2">
            〜
          </div>
          <div class="w-full">
              <%= f.date_field :finish, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
      </div>

        <div class="flex items-center mb-6">
          <div class="w-24">
            <%= f.label "就業場所", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
          </div>
          <div class="w-full">
              <%= f.text_field :place, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
        <div class="flex items-center mb-6">
          <div class="w-24">
            <%= f.label "備考", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
          </div>
          <div class="w-full">
              <%= f.text_area :place_remarks, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
        <div class="flex items-center mb-6">
          <div class="w-24">
            <%= f.label "就業場所", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
          </div>
          <div class="w-full">
              <%= f.text_field :place, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
      </div>

    <!-- staff + condition -->
    <div class="admin_condition bg-gray-100">
      <h2>スタッフを選択してください</h2>
      <div class="flex items-center mb-6">
        <%= f.label :staff_id, "スタッフ名", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
        <%= f.collection_select(:staff_id, Staff.all, :id, :name, {class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"}) %>
      </div>

      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "給与", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-full">
            <%= f.text_field :place, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "交通費", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-full">
            <%= f.text_field :place_remarks, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "就業場所", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-full">
            <%= f.text_field :place, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
    </div>

      <!-- 勤務報告 -->
      <div class="admin_houkoku">
        <h2>勤務報告</h2>
        <%= f.fields_for :report do |r| %>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "勤務日数", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :days, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "勤務時間", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :times, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "交通費", class: "block text-left text-gray-600 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :c_costs, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="admin_button">
        <%= f.submit "保存" , data: { confirm: "保存しますか？" } ,class: "bg-gradient-to-r from-green-400 to-green-600 ... hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
