<div class="admin">
  <h1>受注詳細</h1>
  <button><%= link_to "編集", edit_admin_path(@admin) %></button>

  <div class="grid_area">
    <div class="admin_company w-full">
      <%= render 'admins/koyoujouken/company' %>
    </div>

    <div class="admin_staff w-full">
      <%= render 'admins/koyoujouken/staff' %>
    </div>
    
    <div class="admin_condition w-full">
      <h2>勤務条件</h2>
      <ul>
        <li>就業場所： <%= @admin.place %></li>
        <li>給与：<%= @admin.salary %>円</li>
        <li>交通費：<%= @admin.koutsuhi %>円</li>
      </ul>
    </div>
    <div class="admin_button">
      <%= link_to "戻る", "javascript:history.back()" , data: { confirm: "戻りますか？" } ,class: "bg-gradient-to-r from-green-400 to-green-600 ... hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  </div>
</div>