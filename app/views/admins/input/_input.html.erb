<div class="admin_new">

  <% @admin.errors.full_messages.each do |m| %>
    <%= m %>
  <% end %>

  <div class="bg-white shadow-lg p-4 rounded">
    <%= form_with(model: @admin) do |f| %>
    <div class="admin_area">

    <!-- 会社 -->
    <div class="admin_input bg-gray-100 shadow-md mr-2">
      <h3>会社名を選択してください</h3>
      <div class="flex items-center mb-6">
        <%= f.label :company_id, "会社名", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        <%= f.collection_select(:company_id, Company.all, :id, :name, {class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"}) %>
      </div>

      <div class="flex items-center mb-6">
        <div class="#">
          <%= f.label "日程", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="flex items-center">
          <div class="#">
              <%= f.date_field :start, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
          <div class="px-2">
            〜
          </div>
          <div class="#">
              <%= f.date_field :finish, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
      </div>

        <div class="flex items-center mb-6">
          <div class="w-24">
            <%= f.label "就業場所", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
          </div>
          <div class="w-full">
              <%= f.text_field :place, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
        <div class="flex items-center mb-6">
          <div class="w-24">
            <%= f.label "備考", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
          </div>
          <div class="w-full">
              <%= f.text_area :place_remarks, class: "h-40 border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
      </div>

    <!-- staff + condition -->
    <div class="admin_condition bg-gray-100 shadow-md mr-2">
      <h3>スタッフを選択してください</h3>
      <div class="flex items-center mb-6">
        <%= f.label :staff_id, "スタッフ", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        <%= f.collection_select(:staff_id, Staff.all, :id, :name, {class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"}) %>
      </div>

      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "給与", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-full flex">
          <div class="w-1/3 pr-2">
            <%= f.select :salary_kinds, {"日給": "日給", "時給": "時給"}, {selected: 1} , class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
          <div class="w-2/3">
              <%= f.text_field :salary, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
        </div>
      </div>
      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "交通費", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-full">
            <%= f.text_field :koutsuhi, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
      <div class="flex items-center mb-6">
        <div class="w-24">
          <%= f.label "備考", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-full">
            <%= f.text_area :money_remarks, class: "h-40 border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
    </div>

      <!-- 勤務報告 -->
      <div class="admin_houkoku">
        <h3>勤務報告</h3>
        <%= f.fields_for :report do |r| %>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "勤務日数", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :days, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "勤務時間", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :times, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "交通費", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :c_costs, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-6">
            <div class="w-1/3">
              <%= r.label "備考", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.text_area :remark, class: "border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
        <% end %>
      </div>
      <!-- 勤怠条件 -->
      <div class="admin_attend bg-gray-100 shadow-md my-2">
        <h3>就業条件詳細</h3>
        <%= f.fields_for :condition do |c| %>
        <div class="attend_area flex items-center">
          <div class="flex mr-4 mb-4">
            <%= c.label "シフト合計" %>
            <div class="flex">
              <%= c.time_field(:start, value: "%H:%M") %>
              <p class="mx-2">〜</p>
              <%= c.time_field(:finish, value: "%H:%M") %>
            </div>
          </div>
          <div class="flex items-center mb-4 mr-4">
            <%= c.label "シフト有無" %>
            <%= c.select :shift_umu, {"有": "有", "無": "無"} %>
          </div>
          <div class="flex items-center mb-4">
            <%= f.label "初日集合時間" %>
            <%= f.text_field :first_shift %>
          </div>
        </div>
        <div class="attend_area flex items-center mb-4">
          <div class="flex mr-4 w-38">
            <%= c.label "実働時間" %>
            <%= c.number_field :w_hours %>　時間
          </div>
          <div class="shift_start flex mr-4 w-38">
            <%= c.label "休憩時間" %>
            <%= c.number_field :w_rest %>　時間
          </div>
          <div class="shift_start flex mr-4 w-38">
            <%= c.label "拘束時間" %>
            <%= c.number_field :w_total %>　時間
          </div>
        </div>
        <div class="attend_area flex items-center">
          <div class="flex items-center mr-4">
            <%= c.label "試用期間" %>
            <%= c.select :test_period, {"有": "有", "無": "無"} %>
          </div>
          <div class="flex items-center mr-4">
            <%= c.label "休日" %>
            <%= c.text_field :holiday %>
          </div>
          <div class="flex items-center mr-4">
            <%= c.label "所定外労働時間" %>
            <%= c.select :over, {"有": "有", "無": "無"} %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="admin_button">
        <%= f.submit "保存" , data: { confirm: "保存しますか？" } ,class: "bg-gradient-to-r from-green-400 to-green-600 ... hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to "戻る", "javascript:history.back()" , data: { confirm: "戻りますか？" } ,class: "bg-gradient-to-r from-green-400 to-green-600 ... hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
