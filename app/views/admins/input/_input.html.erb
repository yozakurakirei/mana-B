<div class="admin_new">

  <% @admin.errors.full_messages.each do |m| %>
    <%= m %>
  <% end %>

  <div class="bg-white shadow-lg p-6 rounded">
    <%= form_with(model: @admin) do |f| %>
    <div class="admin_area">

    <!-- 会社 -->
    <div class="admin_input bg-gray-100 shadow-md mr-4 border-2">
      <div class="w-full mb-6 flex items-center">
        <i class="fas fa-building text-2xl mr-2"></i>
        <h3>会社名を選択してください</h3>
      </div>
      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label :company_id, "会社名", class: "w-full block text-left text-gray-500 font-bold mb-1" %>
        </div>
        <div class="w-9/12">
          <%= f.collection_select(:company_id, Company.all, :id, :name, { prompt: "" },{class: "form-control p-4 w-full border-2 border-gray-200 rounded py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"}) %>
        </div>
      </div>

      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label "日程", class: "w-full block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12">
          <div class="flex items-center w-full">
            <div class="w-5/12">
                <%= f.date_field :start, class: "w-full border-2 border-gray-200 rounded py-1 px-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
            <div class="w-2/12">
              <p class="w-full text-center">〜</p>
            </div>
            <div class="w-5/12">
                <%= f.date_field :finish, class: "w-full border-2 border-gray-200 rounded py-1 px-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
        </div>
      </div>

      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label "就業場所", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12">
            <%= f.text_field :place, class: "border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label "備考", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12">
            <%= f.text_area :place_remarks, class: "h-40 border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
    </div>

    <!-- staff + condition -->
    <div class="admin_condition bg-gray-100 shadow-md mr-4 w-full border-2">
      <div class="w-full flex items-center mb-6">
        <i class="far fa-meh-blank mr-2 text-2xl"></i>
        <h3>スタッフを選択してください</h3>
      </div>
      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label :staff_id, "スタッフ", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12">
          <%= f.collection_select(:staff_id, Staff.all, :id, :name, { prompt: "" },{class: "form-control p-4 w-full border-2 border-gray-200 rounded py-2 px-4 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500"}) %>
        </div>
      </div>

      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label "給与", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12 flex">
          <div class="w-1/3 pr-4">
            <%= f.select :salary_kinds, {"日給": "日給", "時給": "時給"}, {selected: 1} , class: "border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          </div>
          <div class="w-2/3 flex items-center">
            <%= f.text_field :salary, class: "border-2 border-gray-200 rounded w-full mr-2 py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            <p>円</p>
          </div>
        </div>
      </div>
      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label "交通費", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12 flex items-center">
          <%= f.text_field :koutsuhi, class: "border-2 border-gray-200 rounded w-full mr-2 py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
          <p>円</p>
        </div>
      </div>
      <div class="flex items-center mb-3 w-full">
        <div class="w-3/12">
          <%= f.label "備考", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
        </div>
        <div class="w-9/12">
            <%= f.text_area :money_remarks, class: "h-40 border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
        </div>
      </div>
    </div>

      <!-- 勤務報告 -->
      <div class="admin_houkoku w-full">
        <div class="w-full flex items-center mb-6">
          <i class="far fa-calendar-check text-2xl mr-2"></i>
          <h3>勤務報告</h3>
        </div>
        <%= f.fields_for :report do |r| %>
          <div class="flex items-center mb-3 w-full">
            <div class="w-1/3">
              <%= r.label "勤務日数", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :days, class: "border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-3 w-full">
            <div class="w-1/3">
              <%= r.label "勤務時間", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :times, class: "border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-3 w-full">
            <div class="w-1/3">
              <%= r.label "交通費", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.number_field :c_costs, class: "border-2 border-gray-200 rounded w-full py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
          <div class="flex items-center mb-3 w-full">
            <div class="w-1/3">
              <%= r.label "備考", class: "block text-left text-gray-500 font-bold mb-1 pr-4" %>
            </div>
            <div class="w-2/3">
                <%= r.text_area :remark, class: "h-40 border-2 border-gray-200 rounded py-1 px-1 text-gray-900 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" %>
            </div>
          </div>
        <% end %>
      </div>
      <!-- 勤怠条件 -->
      <div class="admin_attend w-full bg-gray-100 shadow-md my-2 border-2">
        <div class="w-full mb-2">
        <h3>就業条件詳細</h3>
        </div>
        <%= f.fields_for :condition do |c| %>
        <div class="attend_area flex items-center w-full">
          <div class="flex items-center w-5/12">  
            <div class="w-1/3">
              <%= c.label "シフト合計" %>
            </div>
            <div class="flex items-center">
              <%= c.time_field(:shift_start, value: "%H:%M") %>
              <p class="mx-2">〜</p>
              <%= c.time_field(:shift_finish, value: "%H:%M") %>
            </div>
          </div>
          <div class="flex items-center">
            <%= c.label "シフト有無" %>
            <%= c.select :shift_umu, {"有": "有", "無": "無"} %>
          </div>
          <div class="flex items-center">
            <%= f.label "初日集合時間" %>
            <%= f.text_field :first_shift %>
          </div>
        </div>
        <div class="attend_area flex items-center mb-4">
          <div class="flex mr-4 w-38">
            <%= c.label "実働時間" %>
            <%= c.number_field :w_hours %>　時間
          </div>
          <div class="shift_start flex mr-4 w-38">
            <%= c.label "休憩時間" %>
            <%= c.number_field :w_rest %>　時間
          </div>
          <div class="shift_start flex mr-4 w-38">
            <%= c.label "拘束時間" %>
            <%= c.number_field :w_total %>　時間
          </div>
        </div>
        <div class="attend_area flex items-center">
          <div class="flex items-center mr-4">
            <%= c.label "試用期間" %>
            <%= c.select :test_period, {"有": "有", "無": "無"} %>
          </div>
          <div class="flex items-center mr-4">
            <%= c.label "休日" %>
            <%= c.text_field :holiday %>
          </div>
          <div class="flex items-center mr-4">
            <%= c.label "所定外労働時間" %>
            <%= c.select :over, {"有": "有", "無": "無"} %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="admin_button">
        <%= f.submit "保存" , data: { confirm: "保存しますか？" } ,class: "bg-gradient-to-r from-green-400 to-green-600 ... hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <%= link_to "戻る", "javascript:history.back()" , data: { confirm: "戻りますか？" } ,class: "bg-gradient-to-r from-green-400 to-green-600 ... hover:bg-teal-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
