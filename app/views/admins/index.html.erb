<div class="admin_new">
  <div class="w-full p-2 flex items-center flex-col">
    <div class="w-full flex items-center justify-between">
      <div class="font-bold">
        <h1>受注一覧</h1>
      </div>
      <div class="text-center bg-blue-500 hover:bg-blue-700 font-bold py-2 px-4 rounded">
        <button><%= link_to "新規作成", new_admin_path, class:"text-white" %></button>
      </div>
    </div>

    <div class="w-full">
      <table id="admin_table" class="table table-striped table-bordered text-nowrap">
        <thead>
          <tr>
            <th>会社名</th>
            <th>商品</th>
            <th>ブランド</th>
            <th>場所</th>
            <th>スタッフ名</th>
            <th>給与</th>
            <th>交通費</th>
            <th>ID</th>
            <th>作成者</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @admins.each do |a| %>
            <tr>
              <td>
                <%= link_to edit_admin_path(a) do %>
                <%= a.company.name %>
                <% end %>
              </td> 
              <td><%= a.company.product %></td> 
              <td><%= a.company.brand %></td> 
              <td><%= a.place %></td> 
              <td><%= a.staff.name %></td> 
              <td><%= a.salary %>円</td>
              <td><%= a.koutsuhi %>円</td> 
              <td><%= a.user_id %></td>
              <td><%= a.user_name %></td>
              <td><%= link_to "雇用条件書", admin_path(a) %></td>
              <td><%= link_to "削除", admin_path(a), method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
